<!DOCTYPE html>
<html>
  <head>
    <title>RedesignGiggle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if login? %>
      <%= current_user.full_name %>
      <%= link_to "logout", logout_path %>
    <% else %>
      <%= link_to "login", login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
